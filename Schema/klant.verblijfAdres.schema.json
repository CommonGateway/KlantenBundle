{
  "$id": "https://klantenBundle.commonground.nu/klant.verblijfAdres.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "0.1",
  "title": "VerblijfAdres",
  "type": "object",
  "properties": {
    "aoaIdentificatie": {
      "type": "string",
      "description": "De unieke identificatie van het OBJECT",
      "required": true,
      "maxLength": 100,
      "minLength": 1
    },
    "wplWoonplaatsNaam": {
      "type": "string",
      "nullable": true,
      "maxLength": 80
    },
    "gorOpenbareRuimteNaam": {
      "type": "integer",
      "description": "Een door het bevoegde gemeentelijke orgaan aan een OPENBARE RUIMTE toegekende benaming",
      "required": true,
      "maxLength": 80,
      "minLength": 1
    },
    "aoaPostcode": {
      "type": "string",
      "nullable": true,
      "maxLength": 7
    },
    "aoaHuisnummer": {
      "type": "string",
      "nullable": true,
      "maximum": 99999,
      "minimum": 0
    },
    "aoaHuisletter": {
      "type": "string",
      "nullable": true,
      "maxLength": 1
    },
    "aoaHuisnummertoevoeging": {
      "type": "string",
      "nullable": true,
      "maxLength": 4
    },
    "inpLocatiebeschrijving": {
      "type": "string",
      "nullable": true,
      "maxLength": 1000
    }
  }
}